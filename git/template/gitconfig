[user]
	name = AUTHORNAME
	email = AUTHOREMAIL
[credential]
	helper = GIT_CREDENTIAL_HELPER
[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
	editor = vim
	pager = tig
[alias]
	clone = clone --recursive URL
	count   = !git shortlog -sn
[log]
	date = local
[diff]
	rename = copy
[status]
	color = auto
[merge]
	# Install it: http://kdiff3.sourceforge.net/ (For Mac: `brew install kdif3`)
	tool = kdiff3
[push]
	default = simple

[color]
	pager = off