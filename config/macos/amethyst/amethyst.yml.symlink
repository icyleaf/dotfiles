# Amethyst 0.16.0+ required
# sample: https://github.com/ianyh/Amethyst/blob/development/.amethyst.sample.yml
layouts:
  - tall
  - fullscreen
  # - tall-right
  - wide
  # - two-pane
  # - 3column-left
  # - middle-wide
  # - 3column-right
  # - 4column-left
  # - 4column-right
  - column
  # - row
  # - floating
  # - widescreen-tall
  # - widescreen-tall-right
  # - bsp

mod1:
  - option
  - shift
mod2:
  - option
  - shift
  - control

relaunch-amethyst:
  mod: mod2
  key: z

toggle-float:
  mod: mod2
  key: f

# true if menu bar icon should be hidden (default false).
hide-menu-bar-icon: false

# true if windows smaller than a 500px square should be floating by default (default true)
float-small-windows: false
floating:
  - com.apple.systempreferences
  - com.apple.Stickies
  - com.apple.QuickTimePlayerX
  - com.kapeli.dashdoc
  - dev.warp.Warp-Stable
  - com.logitech.Logi-Options
  - com.daisydiskapp.DaisyDisk
  - AubreeCloud.mini-swatch
  - io.balena.etcher
  - io.sideloadly.sideloadly
  - com.apple.iphonesimulator
  - id: org.jkiss.dbeaver.core.product
    windows:
      - 'Rename Database'

# true to insert new windows into the first position and false to insert new windows into the last position (default false).
new-windows-to-main: false

# true to maintain layout state across application executions (default true).
restore-layouts-on-launch: true

# true to display some optional debug information in the layout HUD (default false).
debug-layout-info: true

# true to get updates to beta versions of the software (default false).
use-canary-build: true
